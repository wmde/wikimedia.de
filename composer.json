{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.2",
        "ext-iconv": "*",
        "symfony/asset": "^4.0",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/dotenv": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/twig-bundle": "^4.0",
        "symfony/yaml": "^4.0",
        "symfony/translation": "^4.0",
        "jms/i18n-routing-bundle": "^3.0",
        "jeroen/file-fetcher": "^4.3.0"
    },
    "require-dev": {
        "symfony/profiler-pack": "^1.0",
        "symfony/debug-pack": "*",
        "symfony/browser-kit": "^4.0",

        "phpunit/phpunit": "^7.1",

        "squizlabs/php_codesniffer": "~3.2",
        "slevomat/coding-standard": "~4.5",
        "mediawiki/mediawiki-codesniffer": "~18.0",

        "phpstan/phpstan": "~0.9.2"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "id": "01CBJZ7JHAP7H6NMWSZ2KJ42H4",
            "allow-contrib": false
        }
    }
}
